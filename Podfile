# Uncomment the next line to define a global platform for your project

target 'Hagrid-iOS' do
    platform :ios, '10.3'
    use_frameworks!
    
    pod 'SnapKit', '~> 4.0.0'
end

target 'Hagrid-tvOS' do
    platform :tvos, '10.2'
    use_frameworks!
    
    pod 'SnapKit', '~> 4.0.0'
end

target 'Hagrid-macOS' do
    platform :osx, '10.12'
    use_frameworks!
    
    pod 'SnapKit', '~> 4.0.0'
end

target 'Hagrid-Demo' do
    platform :ios, '10.3'
    use_frameworks!
end
